<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_120dp"
    android:padding="@dimen/dimen_10dp"
    android:layout_marginBottom="@dimen/dimen_5dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iv_order_pay_item_icon"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:src="@mipmap/index_06" />

    <TextView
        android:id="@+id/tv_order_pay_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/rl_order_pay"
        android:layout_toRightOf="@+id/iv_order_pay_item_icon"
        android:ellipsize="end"
        android:lines="3"
        android:text="的粉红色的后背固定发射速度" />

    <TextView
        android:id="@+id/tv_order_pay_item_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_order_pay_item_name"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_toRightOf="@id/iv_order_pay_item_icon"
        android:background="@color/red_week"
        android:text="@string/commodity_week"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_order_pay_item_no_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_order_pay_item_name"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_toRightOf="@id/iv_order_pay_item_icon"
        android:text="@string/commodity_no_7"
        android:textColor="@color/hot_text_color"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/rl_order_pay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_pay_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="￥19.2"
            android:textColor="@color/hot_text_color"
            android:textSize="@dimen/dimen_18sp" />

        <TextView
            android:id="@+id/tv_order_pay_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:lines="2"
            android:text="X1" />

        <TextView
            android:id="@+id/tv_order_pay_item_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="共3.00kg" />
    </LinearLayout>

</RelativeLayout>