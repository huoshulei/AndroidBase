<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.example.icogn.mshb.entity.ClassifyEntity" />

        <variable
            name="module"
            type="com.example.icogn.mshb.shb.main.home.HomeFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="@{()->module.navigation(data)}"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5dp">

        <ImageView
            android:id="@+id/iv_classify_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@{data.icon}" />

        <TextView
            android:id="@+id/tv_classify_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:lines="1"
            android:text="@{data.name}"
            android:textSize="@dimen/dimen_12sp" />

    </LinearLayout>
</layout>